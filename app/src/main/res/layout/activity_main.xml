<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="noteViewModel"
            type="com.example.notesapp.viewmodels.NoteViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/app_logo" />

            <EditText
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/note_search_input_shape"
                android:drawableStart="@drawable/search_icon"
                android:drawablePadding="10dp"
                android:hint="@string/search_for_notes"
                android:padding="15dp"
                android:text="@={noteViewModel.searchParam}"
                android:textColor="#292929" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerView"
                android:name="com.example.notesapp.fragments.NotesListFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <ImageView
            android:id="@+id/menuBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            app:layout_anchor="@+id/linearLayout"
            app:layout_anchorGravity="end|top"
            android:background="@drawable/circular_ripple"
            android:clickable="true"
            android:focusable="true"
            android:padding="5dp"
            app:srcCompat="@drawable/baseline_more_vert_24" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>